<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Actors</title>
    <%- include('partials/head') %>
</head>
<body>
    <div class="container" id="tableContainer" style="background-color: rgba(255, 255, 255, 0.45);">
        <div class="table-responsive">
            <div class="table-wrapper">
                <div class="table-title d-flex justify-content-between align-items-center">
                    <h2 class="text-center align-middle"><b>Actors</b></h2>
                    <form action="/logout" method="POST" style="display: inline;">
                        <button type="submit" class="btn btn-warning me-2">Logout</button>
                    </form>
                    <% if (user.isAdmin) { %>
                        <button id="seedDatabase" class="btn btn-warning">Clear and Seed Database</button>
                    <% } %>
                </div>

                <!-- Field selection form -->
                <form id="fieldSelectionForm" method="GET" action="/home">
                    <h3>Select fields to display:</h3>
                    <label>
                        <input type="checkbox" name="fields" value="profileImageUrl" <%= selectedFields.includes("profileImageUrl") ? "checked" : "" %>> Picture
                    </label>
                    <label>
                        <input type="checkbox" name="fields" value="name" <%= selectedFields.includes("name") ? "checked" : "" %>> Name
                    </label>
                    <label>
                        <input type="checkbox" name="fields" value="age" <%= selectedFields.includes("age") ? "checked" : "" %>> Age
                    </label>
                    <label>
                        <input type="checkbox" name="fields" value="birthdate" <%= selectedFields.includes("birthdate") ? "checked" : "" %>> Birthdate
                    </label>
                    <label>
                        <input type="checkbox" name="fields" value="nationality" <%= selectedFields.includes("nationality") ? "checked" : "" %>> Nationality
                    </label>
                    <label>
                        <input type="checkbox" name="fields" value="isActive" <%= selectedFields.includes("isActive") ? "checked" : "" %>> Active
                    </label>
                    <label>
                        <input type="checkbox" name="fields" value="relationshipStatus" <%= selectedFields.includes("relationshipStatus") ? "checked" : "" %>> Relationship Status
                    </label>
                    <button type="submit">Update</button>
                </form>

                <!-- Table -->
                <table class="table">
                    <thead>
                        <tr>
                            <% if (selectedFields.includes("profileImageUrl")) { %><th class="text-center align-middle">Picture</th><% } %>
                            <% if (selectedFields.includes("name")) { %>
                                <th class="text-center align-middle">Name 
                                    <a href="/home/?<%= 'fields=' + selectedFields.join('&fields=') %>&sortName=asc" class="fa fa-sort-up" style="color: black; vertical-align: middle; text-decoration: none;"></a>
                                    <a href="/home/?<%= 'fields=' + selectedFields.join('&fields=') %>&sortName=desc" class="fa fa-sort-down" style="color: black; vertical-align: middle; text-decoration: none;"></a>
                                </th>
                            <% } %>
                            <% if (selectedFields.includes("age")) { %>
                                <th class="text-center align-middle">Age  
                                    <a href="/home/?<%= 'fields=' + selectedFields.join('&fields=') %>&sortAge=asc" class="fa fa-sort-up" style="color: black; vertical-align: middle; text-decoration: none;"></a>
                                    <a href="/home/?<%= 'fields=' + selectedFields.join('&fields=') %>&sortAge=desc" class="fa fa-sort-down" style="color: black; vertical-align: middle; text-decoration: none;"></a>
                                </th>
                            <% } %>
                            <% if (selectedFields.includes("birthdate")) { %>
                                <th class="text-center align-middle">Birthdate 
                                    <a href="/home/?<%= 'fields=' + selectedFields.join('&fields=') %>&sortBirthdate=asc" class="fa fa-sort-up" style="color: black; vertical-align: middle; text-decoration: none;"></a>
                                    <a href="/home/?<%= 'fields=' + selectedFields.join('&fields=') %>&sortBirthdate=desc" class="fa fa-sort-down" style="color: black; vertical-align: middle; text-decoration: none;"></a>
                                </th>
                            <% } %>
                            <% if (selectedFields.includes("nationality")) { %>
                                <th class="text-center align-middle">Nationality 
                                    <a href="/home/?<%= 'fields=' + selectedFields.join('&fields=') %>&sortNationality=asc" class="fa fa-sort-up" style="color: black; vertical-align: middle; text-decoration: none;"></a>
                                    <a href="/home/?<%= 'fields=' + selectedFields.join('&fields=') %>&sortNationality=desc" class="fa fa-sort-down" style="color: black; vertical-align: middle; text-decoration: none;"></a>
                                </th>
                            <% } %>
                            <% if (selectedFields.includes("isActive")) { %>
                                <th class="text-center align-middle">Active 
                                    <a href="/home/?<%= 'fields=' + selectedFields.join('&fields=') %>&sortIsActive=asc" class="fa fa-sort-up" style="color: black; vertical-align: middle; text-decoration: none;"></a>
                                    <a href="/home/?<%= 'fields=' + selectedFields.join('&fields=') %>&sortIsActive=desc" class="fa fa-sort-down" style="color: black; vertical-align: middle; text-decoration: none;"></a>
                                </th>
                            <% } %>
                            <% if (selectedFields.includes("relationshipStatus")) { %>
                                <th class="text-center align-middle">Relationship Status 
                                    <a href="/home/?<%= 'fields=' + selectedFields.join('&fields=') %>&sortRelationshipStatus=asc" class="fa fa-sort-up" style="color: black; vertical-align: middle; text-decoration: none;"></a>
                                    <a href="/home/?<%= 'fields=' + selectedFields.join('&fields=') %>&sortRelationshipStatus=desc" class="fa fa-sort-down" style="color: black; vertical-align: middle; text-decoration: none;"></a>
                                </th>
                            <% } %>
                            <th class="text-center align-middle">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (const actor of actors) { %>
                            <tr>
                                <% if (selectedFields.includes("profileImageUrl")) { %>
                                    <td class="text-center align-middle">
                                        <img class="img-fluid rounded-circle" src="<%= actor.profileImageUrl %>" style="width: 10rem;" alt="Avatar" />
                                    </td>
                                <% } %>
                                <% if (selectedFields.includes("name")) { %><td class="text-center align-middle"><%= actor.name %></td><% } %>
                                <% if (selectedFields.includes("age")) { %><td class="text-center align-middle"><%= actor.age %></td><% } %>
                                <% if (selectedFields.includes("birthdate")) { %><td class="text-center align-middle"><%= actor.birthdate %></td><% } %>
                                <% if (selectedFields.includes("nationality")) { %><td class="text-center align-middle"><%= actor.nationality %></td><% } %>
                                <% if (selectedFields.includes("isActive")) { %>
                                    <% if (actor.isActive) { %>
                                        <td class="text-center align-middle">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-circle-fill" viewBox="0 0 16 16">
                                                <circle cx="8" cy="8" r="8" style="color: green;"/>
                                            </svg>
                                        </td>
                                    <% } else { %>
                                        <td class="text-center align-middle">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-circle-fill" viewBox="0 0 16 16">
                                                <circle cx="8" cy="8" r="8" style="color: red;"/>
                                            </svg>
                                        </td>
                                    <% } %>
                                <% } %>
                                <% if (selectedFields.includes("relationshipStatus")) { %><td class="text-center align-middle"><%= actor.relationshipStatus %></td><% } %>
                                <td class="text-center align-middle">
                                    <a style="cursor: pointer;" class="view" data-bs-toggle="modal" data-bs-target="#detailModal" data-id="<%= actor._id %>" data-bs-backdrop="false"><i class="material-icons">&#xE417;</i></a>
                                    <% if (user.isAdmin) { %>
                                        <a style="cursor: pointer;" class="edit" data-bs-toggle="modal" data-bs-target="#editModal" data-id="<%= actor._id %>" data-bs-backdrop="false"><i class="material-icons">&#xE254;</i></a>
                                        <a style="cursor: pointer;" class="delete" data-id="<%= actor._id %>" data-bs-backdrop="false"><i class="material-icons">&#xE872;</i></a>
                                    <% } %>
                                </td>
                            </tr>  
                        <% } %>    
                    </tbody>
                </table>
            </div>
        </div>        
    </div> 

    <!-- Modal -->
    <div class="modal fade" id="detailModal" tabindex="-1" aria-labelledby="actorModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="actorModalLabel">Actor Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <% if (user.isAdmin) { %>
        <!-- Edit Modal -->
    <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editModalLabel">Edit Actor Information</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body"></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit success modal -->
    <div class="modal fade" id="successEditModal" tabindex="-1" aria-labelledby="successEditLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="successEditLabel">Changes added successfully</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this actor?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                    <button type="button" class="btn btn-danger" id="confirmDelete">Yes</button>
                </div>
            </div>
        </div>
    </div>
    <% } %>

    <script>
        document.addEventListener('DOMContentLoaded', (event) => {
            const detailModal = document.getElementById('detailModal');
            const editModal = document.getElementById('editModal');
            const successEditModal = document.getElementById('successEditModal');
            const deleteModal = document.getElementById('deleteModal');
            let actorIdToDelete;

            detailModal.addEventListener('show.bs.modal', function (event) {
                const button = event.relatedTarget;
                const actorId = button.getAttribute('data-id');

                fetch(`/actor/${actorId}`)
                    .then(response => response.text())
                    .then(html => {
                        const modalBody = detailModal.querySelector('.modal-body');
                        modalBody.innerHTML = html;
                    })
                    .catch(error => console.error('Error fetching actor details:', error));
            });

            editModal.addEventListener('show.bs.modal', function (event) {
                const button = event.relatedTarget;
                const actorId = button.getAttribute('data-id');

                fetch(`/editActor/${actorId}`)
                    .then(response => response.text())
                    .then(html => {
                        const modalBody = editModal.querySelector('.modal-body');
                        modalBody.innerHTML = html;
                    })
                    .catch(error => console.error('Error fetching actor details:', error));
            });

            const urlParams = new URLSearchParams(window.location.search);
            const status = urlParams.get('status');
            if (status === 'success' || status === 'deleted' || status === 'seeded') {
                const successModal = new bootstrap.Modal(document.getElementById('successEditModal'));
                successModal.show();
                history.replaceState(null, '', window.location.pathname);
            }

            // Delete button handler
            document.querySelectorAll('.delete').forEach(button => {
                button.addEventListener('click', function (event) {
                    actorIdToDelete = button.getAttribute('data-id');
                    const deleteModalInstance = new bootstrap.Modal(deleteModal);
                    deleteModalInstance.show();
                });
            });

            // Confirm delete handler
            document.getElementById('confirmDelete').addEventListener('click', function () {
                fetch(`/deleteActor/${actorIdToDelete}`, {
                    method: 'DELETE'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        window.location.href = '/?status=deleted';
                    } else {
                        alert('Error deleting actor');
                    }
                })
                .catch(error => console.error('Error deleting actor:', error));
            });

            // Seed database button handler
            document.getElementById('seedDatabase').addEventListener('click', function () {
                fetch(`/seedDatabase`, {
                    method: 'POST'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        window.location.href = '/?status=seeded';
                    } else {
                        alert('Error seeding database');
                    }
                })
                .catch(error => console.error('Error seeding database:', error));
            });
        });
    </script>
</body>
</html>
