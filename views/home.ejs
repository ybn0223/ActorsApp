<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Actors</title>

    <%- include('partials/head') %>
</head>
<body>
    <div class="container" id="tableContainer" style="background-color: rgba(255, 255, 255, 0.45);">
        <div class="table-responsive">
            <div class="table-wrapper">			
                <div class="table-title d-flex justify-content-between align-items-center">
                    <h2 class="text-center align-middle"><b>Actors</b></h2>
                    <form action="/logout" method="POST" style="display: inline;">
                        <button type="submit" class="btn btn-warning me-2">Logout</button>
                      </form>
                    <button id="seedDatabase" class="btn btn-warning">Clear and Seed Database</button>
                </div>
                <!-- Existing table and content here -->
                <table class="table">
                    <thead>
                        <tr>
                            <th class="text-center align-middle">Picture</th>
                            <th class="text-center align-middle">Name <a href="/?sortName=asc" class="fa fa-sort-up" style="color: black; vertical-align: middle; text-decoration: none;"></a><a href="/?sortName=desc" class="fa fa-sort-down" style="color: black; vertical-align: middle; text-decoration: none;"></a></th>
                            <th class="text-center align-middle">Age  <a href="/?sortAge=asc" class="fa fa-sort-up" style="color: black; vertical-align: middle; text-decoration: none;"></a><a href="/?sortAge=desc" class="fa fa-sort-down" style="color: black; vertical-align: middle; text-decoration: none;"></a></th>
                            <th class="text-center align-middle">Birthdate <a href="/?sortBirthdate=asc" class="fa fa-sort-up" style="color: black; vertical-align: middle; text-decoration: none;"></a><a href="/?sortBirthdate=desc" class="fa fa-sort-down" style="color: black; vertical-align: middle; text-decoration: none;"></a></th>
                            <th class="text-center align-middle">Nationality <a href="/?sortNationality=asc" class="fa fa-sort-up" style="color: black; vertical-align: middle; text-decoration: none;"></a><a href="/?sortNationality=desc" class="fa fa-sort-down" style="color: black; vertical-align: middle; text-decoration: none;"></a></th>
                            <th class="text-center align-middle">Active <a href="/?sortIsActive=asc" class="fa fa-sort-up" style="color: black; vertical-align: middle; text-decoration: none;"></a><a href="/?sortIsActive=desc" class="fa fa-sort-down" style="color: black; vertical-align: middle; text-decoration: none;"></a></th>
                            <th class="text-center align-middle">Relationship Status <a href="/?sortRelationshipStatus=asc" class="fa fa-sort-up" style="color: black; vertical-align: middle; text-decoration: none;"></a><a href="/?sortRelationshipStatus=desc" class="fa fa-sort-down" style="color: black; vertical-align: middle; text-decoration: none;"></a></th>
                            <th class="text-center align-middle">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (const actor of actors) { %>
                            <tr>
                                <td class="text-center align-middle"><img class="img-fluid rounded-circle" src="<%= actor.profileImageUrl %>" style="width: 10rem;" alt="Avatar" /></td>
                                <td class="text-center align-middle"><%= actor.name %></td>
                                <td class="text-center align-middle"><%= actor.age %></td>
                                <td class="text-center align-middle"><%= actor.birthdate %></td>
                                <td class="text-center align-middle"><%= actor.nationality %></td>
                                <% if (actor.isActive) { %>
                                    <td class="text-center align-middle"> <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-circle-fill" viewBox="0 0 16 16">
                                        <circle cx="8" cy="8" r="8" style="color: green;"/>
                                      </svg> </td>
                               <% } else { %>
                                    <td class="text-center align-middle"> <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-circle-fill" viewBox="0 0 16 16">
                                        <circle cx="8" cy="8" r="8" style="color: red;"/>
                                      </svg> </td>
                                <% } %>
                                <td class="text-center align-middle"><%= actor.relationshipStatus %></td>
                                <td class="text-center align-middle">
                                    <a style="cursor: pointer;" class="view" data-bs-toggle="modal" data-bs-target="#detailModal" data-id="<%= actor._id %>" data-bs-backdrop="false"><i class="material-icons">&#xE417;</i></a>
                                    <a style="cursor: pointer;" class="edit" data-bs-toggle="modal" data-bs-target="#editModal" data-id="<%= actor._id %>" data-bs-backdrop="false"><i class="material-icons">&#xE254;</i></a>
                                    <a style="cursor: pointer;" class="delete" data-id="<%= actor._id %>" data-bs-backdrop="false"><i class="material-icons">&#xE872;</i></a>
                                </td>
                            </tr>  
                        <% } %>    
                    </tbody>
                </table>
            </div>
        </div>        
    </div> 

    <!-- Modal -->
    <div class="modal fade" id="detailModal" tabindex="-1" aria-labelledby="actorModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="actorModalLabel">Actor Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Modal -->
    <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editModalLabel">Edit Actor Information</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body"></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit success modal -->
    <div class="modal fade" id="successEditModal" tabindex="-1" aria-labelledby="successEditLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="successEditLabel">Changes added successfully</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this actor?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                    <button type="button" class="btn btn-danger" id="confirmDelete">Yes</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', (event) => {
            const detailModal = document.getElementById('detailModal');
            const editModal = document.getElementById('editModal');
            const successEditModal = document.getElementById('successEditModal');
            const deleteModal = document.getElementById('deleteModal');
            let actorIdToDelete;

            detailModal.addEventListener('show.bs.modal', function (event) {
                const button = event.relatedTarget;
                const actorId = button.getAttribute('data-id');

                fetch(`/actor/${actorId}`)
                    .then(response => response.text())
                    .then(html => {
                        const modalBody = detailModal.querySelector('.modal-body');
                        modalBody.innerHTML = html;
                    })
                    .catch(error => console.error('Error fetching actor details:', error));
            });

            editModal.addEventListener('show.bs.modal', function (event) {
                const button = event.relatedTarget;
                const actorId = button.getAttribute('data-id');

                fetch(`/editActor/${actorId}`)
                    .then(response => response.text())
                    .then(html => {
                        const modalBody = editModal.querySelector('.modal-body');
                        modalBody.innerHTML = html;
                    })
                    .catch(error => console.error('Error fetching actor details:', error));
            });

            const urlParams = new URLSearchParams(window.location.search);
            const status = urlParams.get('status');
            if (status === 'success' || status === 'deleted' || status === 'seeded') {
                const successModal = new bootstrap.Modal(document.getElementById('successEditModal'));
                successModal.show();
                history.replaceState(null, '', window.location.pathname);
            }

            // Delete button handler
            document.querySelectorAll('.delete').forEach(button => {
                button.addEventListener('click', function (event) {
                    actorIdToDelete = button.getAttribute('data-id');
                    const deleteModalInstance = new bootstrap.Modal(deleteModal);
                    deleteModalInstance.show();
                });
            });

            // Confirm delete handler
            document.getElementById('confirmDelete').addEventListener('click', function () {
                fetch(`/deleteActor/${actorIdToDelete}`, {
                    method: 'DELETE'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        window.location.href = '/?status=deleted';
                    } else {
                        alert('Error deleting actor');
                    }
                })
                .catch(error => console.error('Error deleting actor:', error));
            });

            // Seed database button handler
            document.getElementById('seedDatabase').addEventListener('click', function () {
                fetch(`/seedDatabase`, {
                    method: 'POST'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        window.location.href = '/?status=seeded';
                    } else {
                        alert('Error seeding database');
                    }
                })
                .catch(error => console.error('Error seeding database:', error));
            });
        });
    </script>
</body>
</html>